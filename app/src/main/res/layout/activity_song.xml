<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/africanmusicpattern"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/song_list_screen_description"
        android:paddingTop="70dp"
        android:paddingLeft="5dp"
        android:gravity="center"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:layout_margin="10dp"
        android:text="Artist - BOBI WINE \n Song Name - singa"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:drawableLeft="@drawable/musicicon3"
        />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:gravity="center"
        android:layout_margin="10dp"
        android:text="Artist \n Song Name"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:drawableLeft="@drawable/musicicon"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:gravity="center"
        android:layout_margin="10dp"
        android:text="Artist \n Song Name"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:drawableLeft="@drawable/musicicon"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:gravity="center"
        android:layout_margin="10dp"
        android:text="Artist \n Song Name"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:drawableLeft="@drawable/musicicon"
        />







</LinearLayout>
